<h1>{{ title }}</h1>

<form method="post" action="/admin/post/add">
    <label>Title</label> <input name="title" type="text" />
    <label>Date</label> <input name="date" type="text" class="postDatepicker" />
    <label>Slug</label> <input name="slug" type="text" />

    <div class="clear"></div>

    <label>Content</label> 

    <div class="clear"></div>

    <textarea name="content" class="tw-editor"></textarea>
    <input name="_csrf" type="hidden" value="{{ csrftoken }}" />
    <input type="submit" value="Submit" />
</form>




